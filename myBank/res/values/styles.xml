<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Sets the Background Color of all Screens this style is applyed on to the choosen Color -->
    
    <style name="BackgroundColor" parent="@android:style/Theme.Light">

        <item name="android:background"> @color/COLOR_Background </item>
    </style>
    
  <!-- StartScreen Design of TextViews -->
  
   <style name="StartScreenTextViews" parent= "@android:style/Theme.Light">
        <item name="android:textColor">@color/COLOR_Font_in_App</item>
        <item name="android:typeface">monospace</item>
        <item name="android:alpha">0.8</item>
      
    </style>
  
  
  
    
    
   
    
    <!-- Sets the Style of all "black" fonts to the specific style beneath -->
  
    <style name="TextViewStyleBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/COLOR_Font_in_App</item>
        <item name="android:typeface">monospace</item>
    </style>

      <!-- Sets the Style of all "white" fonts to the specific style beneath -->
    
 <style name="TextViewStyleWhite" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/COLOR_Fonts_in_white</item>
        <item name="android:typeface">monospace</item>
    </style>
    
   <!-- Sets the Style of all "ADD_TEXTVIEWS"  to the specific style beneath -->
   
    <style name="AddButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/COLOR_Buttons</item>
        <item name="android:typeface">monospace</item>
    </style>





</resources>